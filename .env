# Unique project identifier (avoid conflicts with other Docker projects)
PROJECT_ID=myproject1

# --------------------------
# App Configuration
# --------------------------
APP_LANGUAGE=en
APP_NAME=Framework
APP_ENV=local
APP_PORT=8000
APP_URL=http://localhost
APP_EMAIL=support@example.com

# --------------------------
# Database Configuration
# --------------------------
DB_HOST=mysql
DB_DATABASE=framework
DB_ROOT_PASSWORD=admin
DB_USER=admin
DB_PASSWORD=admin
DB_PORT=3306

# --------------------------
# Memcached Configuration
# --------------------------
MEMCACHE_HOST=memcached
MEMCACHE_PORT=11211

# --------------------------
# Redis Configuration
# --------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# --------------------------
# Mail Configuration
# --------------------------
MAILING_ENABLED=1
MAIL_HOST=mailhog
MAIL_MAILER=smtp
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_NAME=Framework
MAIL_FROM_ADDRESS=support@example.com
ERROR_MAIL_RECEIVER=receiver@example.com

# --------------------------
# PhpMyAdmin Configuration
# --------------------------
PMA_CONTAINER_NAME=${PROJECT_ID}_pma
PMA_PORT=8080

# --------------------------
# AWS Configuration (LocalStack)
# --------------------------
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=my-bucket
AWS_ENDPOINT=http://localstack:4566

# --------------------------
# Other Configuration
# --------------------------
SOCKET_PORT=3000
CRON_CONTAINER=${PROJECT_ID}_cron
LOCALSTACK_CONTAINER=${PROJECT_ID}_localstack
